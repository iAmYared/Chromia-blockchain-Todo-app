module;

import ^^.todo_app.*;
import lib.ft4.accounts.strategies.open;
import lib.ft4.accounts.strategies.{ register_account };

operation register_user(name: text) {
    val account = register_account(); // Ensures the transaction is signed
    print("Account ID in register_user: " + account.id);
    
    create user (
        name = name,
        id = account.id,
        account = account
    );
}
