query get_all_tasks(): list<task> {
    require_user();
    return task @* {};
}

query get_tasks_by_status(status): list<task> {
    require_user();
    return task @* {.status == status};
}
query get_tasks_by_priority(priority): list<task> {
    require_user();
    return task @* {.priority == priority};
}


