query get_overdue_tasks(): list<task> {
    require_user();
    val now = now();
    return task @* {.due_date < now};
}

query get_task_by_id(task_id: byte_array) {
    val task = require_task(task_id);
    return task;
}


query search_tasks(search_query: text) {
    require_user();
    return task @* {
        .title.contains(search_query)
    };
}
